<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_qrcodes"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/orange"
    tools:context="com.example.joshcortez.qr_scanner_v1.qrcodes">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Student Info"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10sp"
            android:textSize="22sp"
            android:textColor="@color/white"
            android:id="@+id/studinfo"
            android:textStyle="bold"/>

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40sp"
            android:id="@+id/studpic"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20sp"
            android:textSize="20sp"
            android:id="@+id/studname"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Student Number"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10sp"
            android:id="@+id/studnum"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Course"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10sp"
            android:id="@+id/course"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book Info"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30sp"
            android:layout_marginBottom="20sp"
            android:textSize="22sp"
            android:id="@+id/bookinfo"
            android:textStyle="bold"
            android:textColor="@color/white"/>

        <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title:"
            android:layout_gravity="left"
            android:textSize="20sp"
            android:paddingLeft="30sp"
            android:textColor="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:paddingLeft="40sp"
                android:text="BookTitle"
                android:id="@+id/booktitle"/>

        </LinearLayout>

        <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Author/s:"
            android:layout_gravity="left"
            android:paddingLeft="30sp"
            android:paddingTop="10sp"
            android:textColor="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:paddingTop="10sp"
                android:paddingLeft="26sp"
                android:text="BookTitle"
                android:id="@+id/author"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Section:"
            android:layout_gravity="left"
            android:paddingTop="8sp"
            android:paddingLeft="30sp"
            android:textColor="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Section:"
                android:layout_gravity="left"
                  android:paddingTop="8sp"
                android:paddingLeft="34sp"
                android:textColor="@color/white"
                android:id="@+id/section"/>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/confirm"
        android:text="      Borrow      "
        android:textColor="@color/orange"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/confirm"/>

</RelativeLayout>
